{
    "type": "project",
    "license": "proprietary",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {"type": "path", "url": "libs/content-renderer"}
    ],
    "require": {
        "php": "^8.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-random": "*",
        "ext-zip": "*",
        "doctrine/doctrine-bundle": "^2.8",
        "doctrine/doctrine-migrations-bundle": "^3.2",
        "doctrine/orm": "^2.14",
        "local/content-renderer": "*",
        "ramsey/uuid": "^4.7",
        "ramsey/uuid-doctrine": "^2.0",
        "symfony/clock": "^6.2",
        "symfony/console": "^6.2",
        "symfony/dotenv": "^6.2",
        "symfony/framework-bundle": "^6.2",
        "symfony/http-client": "*",
        "symfony/monolog-bundle": "^3.8",
        "symfony/string": "^6.2",
        "symfony/translation": "^6.2",
        "symfony/twig-bundle": "^6.2",
        "symfony/validator": "*",
        "symfony/webpack-encore-bundle": "^1.16",
        "symfony/yaml": "^6.2",
        "thecodingmachine/graphqlite": "^6.1",
        "twig/extra-bundle": "^2.12|^3.0",
        "twig/twig": "^2.12|^3.0",
        "webonyx/graphql-php": "^14.9|^15.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "require-dev": {
        "fakerphp/faker": "*",
        "symfony/stopwatch": "^6.2",
        "symfony/web-profiler-bundle": "^6.2"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "scripts": {
        "db:info": "@php console doctrine:mapping:info",
        "db:diff": "@php console doctrine:migrations:diff -vvv",
        "db:up": "@php console doctrine:migrations:migrate --no-interaction",
        "db:down": "@php console doctrine:migrations:migrate first --no-interaction",
        "auto-scripts": [
            "@php console cache:clear",
            "@php console assets:install"
        ],
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
